/* app.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  padding: 20px; /* 增加内边距以避免内容紧贴屏幕边缘 */
  width: 100%; /* 确保容器宽度填满设备宽度 */
  min-height: 100vh; /* 确保容器至少有视口高度 */
}

button {
  margin-top: 20px; /* 设定上边距，避免元素紧密堆叠 */
}

button:focus {
  outline: none; /* 在按钮被聚焦时去除轮廓线 */
}

button::after {
  border: none; /* 点击时不显示额外边框或效果 */
}

page {
  background-color: #f0f0f0; /* 设定页面背景色 */
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center; /* 内容居中显示 */
  padding: 10px; /* 页面内边距 */
}
