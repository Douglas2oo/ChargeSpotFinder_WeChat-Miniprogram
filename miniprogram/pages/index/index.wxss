/* Styles for charging station info card */
.charging-info {
  padding: 10px;
  background-color: #fff;
  border-top: 1px solid #ddd;
}

.charging-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 5px;
}

.price {
  color: #ff0000;
  font-weight: bold;
}

.charging-subheader, .charging-details {
  color: #666;
  font-size: 14px;
}

