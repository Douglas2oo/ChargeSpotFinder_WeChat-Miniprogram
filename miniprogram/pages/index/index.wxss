.search-sort-bar {
  width: 98%;
  display: flex;
  flex-direction: column;
  margin-bottom: 10px;
  margin-right: 20px;
  margin-top: 10%;
}

input {
  height: 60rpx;
  padding-left: 75rpx;
  font-size: 28rpx;
  border-radius: 30rpx;
  background: #F5F5F5;
  flex-grow: 1;
  padding-right: 30px; /* 增加右侧内边距，以避免文本被按钮覆盖 */
}

.clear-button {
  position: absolute;
  right: 10px;
  background: none;
  border: none;
  font-size: 16px;
  cursor: pointer;
  color: #888;
}

.search-input-filled {
  /* 有内容时的样式 */
  border: #00796b 1px solid;
}

.search_icon {
  position: absolute;
  top: 50%;
  left: 0;
  margin-top: -15rpx;
  width: 28rpx;
  height: 30rpx;
  padding-left: 23rpx;
}

.flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.head_input {
  position: relative;
  flex: 1;
  margin-left: 12rpx;
}

.head {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  background: #fff;
}

.sort-options {
  width: 100%;
  display: flex;
  justify-content: space-around;
  margin-bottom: -10px;
  margin-top: -20px;
  
}

.sort-button {
  padding: 10px;
  background-color: rgba(213, 210, 28, 0);
  color: #595757;
  border-radius: 10px;
  padding: 8px;
  font-size: 15px;
}

.sort-button-active {
  background-color: #f0f0f0;
  color: #419955;
}

.tag-scroll {
  width: 100%;
  white-space: nowrap;
  overflow-x: scroll;
}

.tag-scroll::-webkit-scrollbar {
  display: none;
}

.tag-scroll {
  -ms-overflow-style: none;  /* IE and Edge */
  scrollbar-width: none;  /* Firefox */
}

.tag {
  display: inline-flex;
  margin-top: -5px;
  width: fit-content;
  flex-wrap: nowrap; /* Prevent wrapping */
  overflow-x: auto; /* Enable horizontal scrolling */
  white-space: nowrap; /* Prevent line breaks */
}

.tag-button {
  background-color: rgba(213, 210, 28, 0);
  color: #595757;
  font-size: 13px;
  border: #666 1px solid;
  padding: 0px 1px 0px 1px;
  text-align: center;
  /* width: 100% !important; */
}

.tag-button:last-child {
  margin-right: 0;
}

.tag-button-active {
  color: #21933c;
  border: #419955 1px solid;
  background-color: rgba(89, 210, 49, 0.3);
}

.tag-button-inactive {
  color: #ff0000;
}

.blank-space {
  margin-right: 5px;
}

.charging-info {
  padding: 10px;
  background-color: #fff;
  border-top: 1px solid #ddd;
  margin-bottom: 10px;
  border-radius: 10px;
}

.charging-list {
  width: 98%;
  margin-right: 20px;
}

.charging-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 5px;
}

.price {
  color: #ff0000;
  font-weight: bold;
}

.charging-subheader, .charging-details {
  color: #666;
  font-size: 14px;
}

.charging-state {
  margin-left: auto;
  display: flex;
  align-items: center;
  font-size: 15px;
  margin-bottom: 3px;
}

.state-super {
  color: #34c500;
  background-color: rgba(35, 198, 35, 0.3);
  border-radius: 10px;
  padding: 5px;
  margin-right: 5px;
}

.state-normal {
  color: #bec400;
  background-color: rgba(213, 210, 28, 0.3);
  border-radius: 10px;
  padding: 5px;
  margin-right: 5px;
}

.load-more, .no-more-data {
  display: block;
  text-align: center;
  color: #9f9f9f;
}

.banner {
  width: 100%;
  height: 100px;
  margin-bottom: 10px;
}

