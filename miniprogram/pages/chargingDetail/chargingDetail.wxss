/* chargingDetail.wxss */

.contain {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 20px;
  background-color: rgb(255, 255, 255);
  border-radius: 10px;
  width: 90%;
  margin-left: -5%;
  margin-bottom: 3%;
  height: fit-content;
}



.name {
  font-size: 18px;
  font-weight: bold;
}

.station-info {
  display: flex;
  align-items: center;
}

.info-container {
  display: flex;
  width: 100%;
  justify-content: space-between;
}

.info-left {
  display: flex;
  flex-direction: column;
}

.faculty_list {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  width: 100%;
  max-height: 10px;
}

.faculty_item {
  margin-right: 10px; /* 调整每个项之间的间距 */
  white-space: nowrap; /* 防止内容换行 */
  font-size: 10px;
  color: #666;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
}

.faculty_block {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  white-space: nowrap; /* 防止内容换行 */
}

.charging-state {
  display: flex;
  font-size: 15px;
  margin-bottom: 3px;
}

.state-super {
  color: #34c500;
  background-color: rgba(35, 198, 35, 0.3);
  border-radius: 10px;
  padding: 5px;
  margin-right: 5px;
}

.state-normal {
  color: #bec400;
  background-color: rgba(213, 210, 28, 0.3);
  border-radius: 10px;
  padding: 5px;
  margin-right: 5px;
}

.location_container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
}

.button-container {
  display: flex;
  justify-content: space-around; 
  flex-direction: row;
  align-items: center;
}

.navigate_area,
.star-area {
  display: flex;
  align-items: center;
  flex-direction: column;
  margin-left: 20px;
}


.addFavorite,
.distance {
  font-size: 11px;
}

.star-image {
  width: 25px; /* 设置容器的宽度 */
  height: 25px; /* 设置容器的高度 */
}

.navigate-image {
  width: 30px; /* 设置容器的宽度 */
  height: 30px; /* 设置容器的高度 */
}

.location,
.price,
.average-time,
.cost-per-hour {
  font-size: 14px;
  color: #666;
}

.working_time {
  font-size: 14px;
  
}

.bottom {
  display: flex;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  width: 100%;
  border-radius: 20px;
  border: #f0f0f0 1px solid;
  margin-left: -5%;
  padding: 10px;
  background-color: white;
}

.bottom_price {
  display: flex;
  justify-content: space-between;
  font-size: 20px;
  font-weight: bold;
  color: #37d055;
  margin-left: 5%;
}

.scan_button {
  background-image: linear-gradient(to right, #95caa7, #00a527); 
  color: white;
  border-radius: 20px;
  
}

.button_container {
  display: flex;
  justify-content: space-between;
  margin-right: 3%;
  margin-bottom: 5%;
  margin-top: -3%;
}